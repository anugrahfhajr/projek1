<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>PROJEK1</title>
    <style>
      table {
        width: 100%;
        border-collapse: collapse;
      }
  
      table, th, td {
        border: 1px solid black;
      }
  
      th, td {
        padding: 15px;
        text-align: left;
      }
  
      th {
        background-color: #f2f2f2;
      }
  
      form {
        margin: 0;
      }
  
      input[type="text"],
      input[type="date"],
      select {
        width: 100%;
        padding: 5px;
        margin: 5px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
      }
  
      input[type="submit"] {
        background-color: #4caf50;
        color: white;
        padding: 10px 20px;
        margin: 5px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }
    </style>
  </head>
  <body>
    <%- include('partials/navbar.ejs') %>
    <h1>Employees and Projects</h1>
    <table>
      <tr>
        <th>Employee Name</th>
        <th>Projects</th>
      </tr>
      <% employees.forEach(function(employee) { %>
        <tr>
          <td><%= employee.name %></td>
          <td>
            <ul>
              <% employee.Projects.forEach(function(project) { %>
                <li><%= project.name %> - <%= project.status %></li>
              <% }); %>
            </ul>
          </td>
        </tr>
      <% }); %>
    </table>
    <a href="/projects/add">Add Project</a>
  </body>
  
</html>
